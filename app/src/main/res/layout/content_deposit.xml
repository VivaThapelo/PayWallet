<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ktrlabs.thapelo.iwallet.Deposit"
    tools:showIn="@layout/activity_deposit">

    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:elevation="2dp"
        android:padding="8dp"
        android:background="#e9e9e9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_weight="1"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:text="Deposit Methods"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:layout_weight="1"
            android:id="@+id/select_contact_receive"
            android:padding="4dp"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:onClick="getContact"
            android:background="@drawable/corners_accent"
            android:text="Send Request"
            android:layout_width="28dp"
            android:layout_height="28dp" />

    </LinearLayout>


    <LinearLayout
        android:gravity="center_vertical"
        android:elevation="2dp"
        android:padding="8dp"
        android:layout_margin="8dp"
        android:background="@drawable/corners_white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       >

        <ImageView
            android:padding="8dp"
            android:src="@drawable/ic_place_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            android:textStyle="bold"
            android:textSize="16dp"
            android:text="Deposit at a merchant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

            <TextView
                android:textSize="11dp"
                android:text="Locate a merchant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:gravity="center_vertical"
        android:elevation="2dp"
        android:padding="8dp"
        android:layout_margin="8dp"
        android:background="@drawable/corners_white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:padding="8dp"
            android:src="@drawable/ic_place_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textStyle="bold"
                android:textSize="16dp"
                android:text="Deposit at a merchant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="11dp"
                android:text="Locate a merchant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
