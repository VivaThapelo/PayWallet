<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ktrlabs.thapelo.iwallet.ContactsActivtity"
    tools:showIn="@layout/activity_contacts_activtity">


    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:elevation="2dp"
        android:padding="8dp"
        android:background="#e9e9e9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/profile_names"
            android:layout_weight="1"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:text="Select A Contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:layout_weight="1"
            android:text="Add Contact"
            android:padding="4dp"
            android:textSize="12sp"
            android:onClick="goToSetAmount"
            android:textColor="@color/white"
            android:background="@drawable/corners_accent"
            android:layout_width="28dp"
            android:layout_height="28dp" />

    </LinearLayout>

    <ListView
        android:layout_marginTop="48dp"
        android:layout_marginBottom="4dp"
        android:divider="#f3f3f3"
        android:scrollbars="none"
        android:id="@+id/contactsListview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</android.support.constraint.ConstraintLayout>
