<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginBottom="56dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ktrlabs.thapelo.iwallet.MainActivity"
    tools:showIn="@layout/app_bar_transactions">

    <LinearLayout
        android:orientation="horizontal"
        android:elevation="2dp"
        android:background="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/search_choices"
            android:src="@drawable/ic_whatshot_black_24dp"
            android:layout_weight="1"
            android:padding="56dp"
            android:elevation="8dp"
            android:visibility="gone"
            android:tint="@color/colorPrimaryDark"
            android:background="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="56dp" />

    <android.support.v7.widget.SearchView
        android:id="@+id/search_transaction"
        android:textColor="#777"
        android:layout_weight="1"
        app:defaultQueryHint="Search Transactions"
        android:background="@color/white"
        android:backgroundTint="@color/white"
        android:elevation="2dp"
        android:queryHint="Today, This week or Month"
        android:layout_width="match_parent"
        android:layout_height="56dp" />


        <ImageButton
           android:id="@+id/datepicker"
            android:src="@drawable/ic_date_range_black_24dp"
            android:layout_weight="1"
            android:padding="56dp"
            android:elevation="8dp"
            android:tint="@color/colorPrimaryDark"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="56dp" />

    </LinearLayout>

    <ListView
        android:layout_margin="8dp"
        android:dividerHeight="8dp"
        android:divider="#f3f3f3"
        android:scrollbars="none"
        android:id="@+id/transactions_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
 />

</LinearLayout>
