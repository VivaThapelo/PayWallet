<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="0sp"
    android:paddingRight="0sp"
    android:paddingTop="0sp"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ktrlabs.thapelo.iwallet.MainActivity"
    tools:showIn="@layout/app_bar_transactions">

    <LinearLayout
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:orientation="horizontal"
            android:elevation="2dp"
            android:id="@+id/payCode"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="56dp">

            <LinearLayout
                android:orientation="vertical"
                android:elevation="4dp"
                android:padding="8dp"
                android:layout_weight="6"
                android:onClick="goToQrPay"
                android:background="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="56dp">

            <ImageButton
                android:id="@+id/activity_geo_pay"
                android:src="@drawable/ic_cast_connected_black_24dp"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:padding="0dp"
                android:tint="@color/colorPrimaryDark"
                android:background="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="56dp" />

                <TextView
                    android:text="QuickPay"
                    android:textSize="11sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                </LinearLayout>

            <Button
                android:id="@+id/select_contact_scanpay"
                android:padding="18dp"
                android:textColor="#777"
                android:onClick="getContact"
                android:layout_weight="1"
                android:background="@color/white"
                android:text="Send to a contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:orientation="vertical"
                android:elevation="4dp"
                android:padding="8dp"
                android:layout_weight="6"
                android:onClick="goToGeoPay"
                android:background="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="56dp">

            <ImageButton
                android:id="@+id/send_location"
                android:src="@drawable/ic_place_black_24dp"
                android:layout_weight="2"
                android:layout_gravity="center_horizontal"
                android:padding="0dp"
                android:tint="@color/colorPrimaryDark"
                android:background="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="56dp" />

                <TextView
                    android:text="GeoPay"
                    android:textSize="11sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                </LinearLayout>

        </LinearLayout>

        <com.journeyapps.barcodescanner.DecoratedBarcodeView
            android:id="@+id/camera_preview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="56dp"
            android:layout_gravity="center"
            app:zxing_use_texture_view="true"
            app:zxing_preview_scaling_strategy="fitXY"/>

    </LinearLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/send_code_layout"
        android:orientation="horizontal"
        android:layout_marginTop="0sp"
        android:visibility="gone"
        android:textColorHint="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <EditText
            android:id="@+id/send_code"
            android:hint="SMS Code"
            android:inputType="number"
            android:textSize="16sp"
            android:textStyle="bold"
            android:padding="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </android.support.design.widget.TextInputLayout>


</LinearLayout>
