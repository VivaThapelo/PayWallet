<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ktrlabs.thapelo.iwallet.MainActivity"
    tools:showIn="@layout/app_bar_transactions">



        <LinearLayout
            android:orientation="horizontal"
            android:elevation="2dp"
            android:background="#e9e9e9"
            android:layout_width="match_parent"
            android:layout_height="56dp">

            <Button
                android:text="Set the receiving amount"
                android:padding="18sp"
                android:onClick="goToSetAmount"
                android:textColor="#777"
                android:background="#e9e9e9"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

        <TextView
            android:text="WalletID"
            android:gravity="center"
            android:textStyle="bold"
            android:visibility="gone"
            android:textSize="16sp"
            android:layout_marginTop="8sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/account_number"
            android:text="0747513324"
            android:visibility="gone"
            android:gravity="center"
            android:textSize="14sp"
            android:layout_marginTop="4sp"
            android:layout_marginBottom="4sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    <ImageView
        android:elevation="2dp"
        android:background="@color/white"
        android:layout_gravity="center_horizontal"
        android:id="@+id/qr_receive"
        android:src="@mipmap/ic_launcher"
        android:foregroundGravity="center"
        android:layout_margin="16dp"
        android:layout_width="250dp"
        android:layout_height="250dp" />

        <TextView
            android:id="@+id/receive_value"
            android:text=""
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:textSize="28sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/receive_edit"
                android:padding="8dp"
                android:elevation="8dp"
                android:visibility="gone"
                android:layout_margin="16dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Enter Value"
                    android:padding="8dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />


        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:elevation="2dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:text="R"
                android:textColorHint="@color/colorPrimaryDark"
                android:layout_weight="0"
                android:paddingLeft="20sp"
                android:paddingRight="0dp"
                android:paddingTop="10sp"
                android:paddingBottom="10sp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_gravity="top"
                android:textColor="@color/colorPrimaryDark"
                android:background="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <EditText
                android:id="@+id/receive_amount"
                android:inputType="numberDecimal"
                android:textSize="36sp"
                android:textStyle="bold"
                android:layout_weight="6"
                android:layout_gravity="center_vertical"
                android:textColorHint="#BBB"
                android:background="@color/white"
                android:textColor="@color/colorPrimary"
                android:hint="AMOUNT"
                android:text=""
                android:padding="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <ImageButton
                android:id="@+id/receive_clear"
                android:src="@drawable/ic_clear_black_24dp"
                android:padding="12sp"
                android:background="@color/white"
                android:layout_weight="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            </LinearLayout>


        <Button
            android:id="@+id/receive_button"
            android:fadingEdgeLength="10sp"
            android:text="Update"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@color/colorPrimaryDark"
            android:padding="10sp"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        </LinearLayout>

        </FrameLayout>

    </LinearLayout>

</LinearLayout>
