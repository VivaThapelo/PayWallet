<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_gravity="center"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="com.ktrlabs.thapelo.iwallet.PinActivity">

    <TextView
        android:id="@+id/pin_page_text"
        android:text="ENTER PIN"
        android:textSize="32dp"
        android:padding="16dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/wateva_text"
            android:text="Enter Your 4 Digits Pin"
            android:textSize="14dp"
            android:gravity="center"
            android:textStyle="bold"
            android:paddingTop="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="0dp"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:layout_height="wrap_content"
        >

        <EditText
            android:id="@+id/pin_first"
        android:text=""
            android:textColor="@color/colorAccent"
            android:textSize="48dp"
            android:clickable="false"
            android:cursorVisible="false"
            android:textAlignment="center"
        android:inputType="numberPassword"
            android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/pin_second"
            android:text=""
            android:textSize="48dp"
            android:textColor="@color/colorAccent"
            android:clickable="false"
            android:cursorVisible="false"
            android:textAlignment="center"
            android:inputType="numberPassword"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/pin_third"
            android:text=""
            android:textSize="48dp"
            android:textColor="@color/colorAccent"
            android:clickable="false"
            android:cursorVisible="false"
            android:textAlignment="center"
            android:inputType="numberPassword"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/pin_forth"
            android:text=""
            android:textSize="48dp"
            android:textColor="@color/colorAccent"
            android:clickable="false"
            android:cursorVisible="false"
            android:textAlignment="center"
            android:inputType="numberPassword"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                style="?android:attr/borderlessButtonStyle"
                android:onClick="pinCode"
                android:text="1"
                android:textSize="24dp"
                android:textColor="@color/white"

                android:layout_margin="2dp"
                android:layout_weight="10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                style="?android:attr/borderlessButtonStyle"
                android:onClick="pinCode"
                android:text="2"
                android:textSize="24dp"
                android:textColor="@color/white"

                android:layout_margin="2dp"
                android:layout_weight="10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/button2"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="10"
                android:onClick="pinCode"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="24dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                style="?android:attr/borderlessButtonStyle"
                android:onClick="pinCode"
                android:text="4"
                android:textSize="24dp"
                android:textColor="@color/white"
                android:layout_margin="2dp"
                android:layout_weight="10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                style="?android:attr/borderlessButtonStyle"
                android:onClick="pinCode"
                android:text="5"
                android:textSize="24dp"
                android:textColor="@color/white"
                android:layout_margin="2dp"
                android:layout_weight="10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                style="?android:attr/borderlessButtonStyle"
                android:onClick="pinCode"
                android:text="6"
                android:textSize="24dp"
                android:textColor="@color/white"
                android:layout_margin="2dp"
                android:layout_weight="10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    style="?android:attr/borderlessButtonStyle"
                    android:onClick="pinCode"
                    android:text="7"
                    android:textSize="24dp"
                    android:textColor="@color/white"
                    android:layout_margin="2dp"
                    android:layout_weight="10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <Button
                    style="?android:attr/borderlessButtonStyle"
                    android:onClick="pinCode"
                    android:text="8"
                    android:textSize="24dp"
                    android:textColor="@color/white"
                    android:layout_margin="2dp"
                    android:layout_weight="10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <Button
                    style="?android:attr/borderlessButtonStyle"
                    android:onClick="pinCode"
                    android:text="9"
                    android:textSize="24dp"
                    android:textColor="@color/white"
                    android:layout_margin="2dp"
                    android:layout_weight="10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    style="?android:attr/borderlessButtonStyle"
                    android:onClick="clearCode"
                    android:text="clear"
                    android:textSize="24dp"
                    android:clickable="false"
                    android:visibility="invisible"
                    android:src="@drawable/ic_action_name"
                    android:textColor="@color/white"
                    android:layout_margin="2dp"
                    android:layout_weight="10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <Button
                    style="?android:attr/borderlessButtonStyle"
                    android:onClick="pinCode"
                    android:text="0"
                    android:textSize="24dp"
                    android:textColor="@color/white"
                    android:layout_margin="2dp"
                    android:layout_weight="10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageButton
                    style="?android:attr/borderlessButtonStyle"
                    android:onClick="clearCode"
                    android:text="reset"
                    android:textStyle="normal"
                    android:clickable="false"
                    android:textSize="24dp"
                    android:tint="@color/white"
                    android:src="@drawable/ic_backspace_black_24dp"
                    android:textColor="@color/white"
                    android:layout_margin="2dp"
                    android:layout_weight="10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

    </LinearLayout>

</LinearLayout>
