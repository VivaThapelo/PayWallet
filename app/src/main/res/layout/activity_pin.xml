<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="8dp"
    android:layout_gravity="center"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="com.ktrlabs.thapelo.iwallet.PinActivity">

    //user view
    <LinearLayout
        android:id="@+id/payee"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="4dp"
        android:visibility="gone"
        android:paddingBottom="4dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="16dp"
        android:background="@color/white"
        android:divider="@color/white"
        android:layout_height="wrap_content">

        <com.mikhaellopez.circularimageview.CircularImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:civ_shadow_radius="1"
            android:layout_marginRight="8dp"
            android:layout_marginTop="0dp"
            android:paddingTop="0dp"
            android:layout_marginBottom="0dp"
            android:paddingBottom="0dp"
            android:src="@drawable/propic"
            app:civ_border_width="8dp"
            app:civ_border_color="@color/white"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="8"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/name"
                android:text="Thapelo Radebe"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="#333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="-4dp"
                android:id="@+id/type"
                android:textSize="12sp"
                android:textColor="#666666"
                android:text="Transfer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/date"
                android:textSize="11sp"
                android:textColor="@color/near_white"
                android:text="15:50 - 12 may 2017"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>

        <LinearLayout
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_weight="0"
            android:paddingRight="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/amount"
                android:textSize="18sp"
                android:textColor="#1abc14"
                android:text="R0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/fee"
                android:layout_marginTop="-4dp"
                android:layout_gravity="right"
                android:textSize="11sp"
                android:textColor="#d1070a"
                android:text="0.0c fee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/pin_page_text"
        android:text="ENTER PIN"
        android:textSize="32dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="368dp"
        android:layout_marginBottom="16dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp">

        <EditText
            android:id="@+id/pin_first"
            android:layout_weight="1"
        android:text=""
            android:textSize="48dp"
            android:clickable="false"
            android:cursorVisible="false"
            android:textAlignment="center"
            android:textColor="@color/white"
        android:inputType="numberPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/pin_second"
            android:layout_weight="1"
            android:text=""
            android:textSize="48dp"
            android:clickable="false"
            android:cursorVisible="false"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:inputType="numberPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/pin_third"
            android:layout_weight="1"
            android:text=""
            android:textSize="48dp"
            android:clickable="false"
            android:cursorVisible="false"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:inputType="numberPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/pin_forth"
            android:layout_weight="1"
            android:text=""
            android:textSize="48dp"
            android:clickable="false"
            android:cursorVisible="false"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:inputType="numberPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                style="?android:attr/borderlessButtonStyle"
                android:onClick="pinCode"
                android:text="1"
                android:textSize="24dp"
                android:textColor="@color/white"
                android:background="@color/colorPrimaryDark"
                android:layout_margin="2dp"
                android:layout_weight="10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                style="?android:attr/borderlessButtonStyle"
                android:onClick="pinCode"
                android:text="2"
                android:textSize="24dp"
                android:textColor="@color/white"
                android:background="@color/colorPrimaryDark"
                android:layout_margin="2dp"
                android:layout_weight="10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                style="?android:attr/borderlessButtonStyle"
                android:onClick="pinCode"
                android:text="3"
                android:textSize="24dp"
                android:textColor="@color/white"
                android:background="@color/colorPrimaryDark"
                android:layout_margin="2dp"
                android:layout_weight="10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                style="?android:attr/borderlessButtonStyle"
                android:onClick="pinCode"
                android:text="4"
                android:textSize="24dp"
                android:textColor="@color/white"
                android:background="@color/colorPrimaryDark"
                android:layout_margin="2dp"
                android:layout_weight="10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                style="?android:attr/borderlessButtonStyle"
                android:onClick="pinCode"
                android:text="5"
                android:textSize="24dp"
                android:textColor="@color/white"
                android:background="@color/colorPrimaryDark"
                android:layout_margin="2dp"
                android:layout_weight="10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                style="?android:attr/borderlessButtonStyle"
                android:onClick="pinCode"
                android:text="6"
                android:textSize="24dp"
                android:textColor="@color/white"
                android:background="@color/colorPrimaryDark"
                android:layout_margin="2dp"
                android:layout_weight="10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    style="?android:attr/borderlessButtonStyle"
                    android:onClick="pinCode"
                    android:text="7"
                    android:textSize="24dp"
                    android:textColor="@color/white"
                    android:background="@color/colorPrimaryDark"
                    android:layout_margin="2dp"
                    android:layout_weight="10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <Button
                    style="?android:attr/borderlessButtonStyle"
                    android:onClick="pinCode"
                    android:text="8"
                    android:textSize="24dp"
                    android:textColor="@color/white"
                    android:background="@color/colorPrimaryDark"
                    android:layout_margin="2dp"
                    android:layout_weight="10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <Button
                    style="?android:attr/borderlessButtonStyle"
                    android:onClick="pinCode"
                    android:text="9"
                    android:textSize="24dp"
                    android:textColor="@color/white"
                    android:background="@color/colorPrimaryDark"
                    android:layout_margin="2dp"
                    android:layout_weight="10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    style="?android:attr/borderlessButtonStyle"
                    android:onClick="pinCode"
                    android:text="x"
                    android:textSize="24dp"
                    android:src="@drawable/ic_action_name"
                    android:textColor="@color/white"
                    android:background="@color/colorPrimaryDark"
                    android:layout_margin="2dp"
                    android:layout_weight="10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <Button
                    style="?android:attr/borderlessButtonStyle"
                    android:onClick="pinCode"
                    android:text="0"
                    android:textSize="24dp"
                    android:textColor="@color/white"
                    android:background="@color/colorPrimaryDark"
                    android:layout_margin="2dp"
                    android:layout_weight="10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <Button
                    style="?android:attr/borderlessButtonStyle"
                    android:onClick="pinCode"
                    android:text="reset"
                    android:textSize="24dp"
                    android:textColor="@color/white"
                    android:background="@color/colorPrimaryDark"
                    android:layout_margin="2dp"
                    android:layout_weight="10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

    </LinearLayout>

</LinearLayout>
